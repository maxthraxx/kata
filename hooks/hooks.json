{
  "description": "Kata framework hooks for session management",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/hooks/kata-check-update.js"
          },
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/hooks/kata-setup-statusline.js"
          }
        ]
      }
    ]
  }
}
